   "source": [
    "# Initial 2D contact list\n",
    "contacts = [\n",
    "    [\"Arun\", \"9876543210\", \"arun@example.com\"],\n",
    "    [\"Beena\", \"9898989898\", \"beena@example.com\"],\n",
    "    [\"Charles\", \"9123456780\", \"charles@example.com\"]\n",
    "]\n",
    "\n",
    "# Function to add a new contact\n",
    "def add_contact():\n",
    "    name = input(\"Enter contact name: \")\n",
    "    phone = input(\"Enter phone number: \")\n",
    "    email = input(\"Enter email address: \")\n",
    "    contacts.append([name, phone, email])\n",
    "    print(\"Contact added successfully!\\n\")\n",
    "\n",
    "# Function to display all contacts (sorted)\n",
    "def display_contacts():\n",
    "    print(\"\\n----- All Contacts (Sorted by Name) -----\")\n",
    "    sorted_list = sorted(contacts, key=lambda x: x[0].lower())  # sort by name\n",
    "    for name, phone, email in sorted_list:\n",
    "        print(f\"Name: {name}, Phone: {phone}, Email: {email}\")\n",
    "    return sorted_list\n",
    "\n",
    "# Function to search contacts (partial match)\n",
    "def search_contact():\n",
    "    search_key = input(\"\\nEnter name to search: \").lower()\n",
    "    print(\"\\n----- Search Results -----\")\n",
    "    results = [c for c in contacts if search_key in c[0].lower()]\n",
    "    \n",
    "    if results:\n",
    "        for name, phone, email in results:\n",
    "            print(f\"Name: {name}, Phone: {phone}, Email: {email}\")\n",
    "    else:\n",
    "        print(\"No matching contacts found.\")\n",
    "\n",
    "# MAIN FLOW\n",
    "add_contact()                     # Add new contact\n",
    "sorted_contacts = display_contacts()  # Get the sorted list\n",
    "\n",
    "# Display first 3 contacts after sorting\n",
    "print(\"\\n----- First 3 Contacts -----\")\n",
    "for c in sorted_contacts[:3]:\n",
    "    print(f\"Name: {c[0]}, Phone: {c[1]}, Email: {c[2]}\")\n",
    "\n",
    "search_contact()                  # Search for a contact\n"
   ]
  }
